{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,
  },
  "include": [
    "Body.tsx",
    "Cell.tsx",
    "EditableCell.tsx",
    "Head.tsx",
    "HeadCell.tsx",
    "index.tsx",
    "Row.tsx",
    "Table.tsx",
    "TableWithFixedHeader.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}